def say_hi():
    print("hello word")
say_hi()

def say_hi(name):
    print("hello"+ name)
say_hi("rohini")

def hi(name,age):
    print("hello"+ name +"you are"+age)
hi("rohini","23")


 def max_num(num1,num2,num3):
   if num1>num2 and num1>num3:
         print("num1 is maximum")
    elif num2>num1 and num2>num3:
         print("num2 is maximum")
    else:
        print("num3 is maximum")
 max_num(10,2,4)

#write a function that capitalize first and fourth letters of word
 word="akash"
 first_letter=word[0]
 inbetween=word[1:3]
 fourth_letter=word[3]
 rest=word[4:]
 def capitalize(word):
     return (first_letter.upper()+inbetween+fourth_letter.upper()+rest)
 print(capitalize(word))


 def vowels(word):
     first_letter=word[0]
      if first_letter in "aeiou":
          vowel_word=word+"ay"
      else:
          vowel_word[1:]+first_letter+"ay"
      print(vowel("sneha"))
      return( vowel_word("akash"))

 def revers_string(word):
   text=word;
    revers_text=word[::-1]
 print(revers_string("sneha")

 def voewl(word):
    vowel="AEIOUaeiou"
     for voewel in vowel:
          word=word.replace(vowel,"g")
      return word
    print(vowel("sneha"))






